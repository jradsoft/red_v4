<Window x:Class="wpfEFac.Views.PuntoVenta.AddComentario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Comentario" Height="300" Width="300">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <Label>Escriba comentario:</Label>
            <TextBox x:Name="txtComentario" TabIndex="0" />
        </StackPanel>
        
        <Button Grid.Row="1" HorizontalAlignment="Right" Width="80" x:Name="cmdAddComentario" Click="cmdAddComentario_Click">Agregar</Button>
        <Button Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" x:Name="cmdCancelar" Click="cmdCancelar_Click" Width="80">Cancel</Button>
    </Grid>
</Window>
